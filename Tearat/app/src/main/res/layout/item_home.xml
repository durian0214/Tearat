<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <ImageView
        android:id="@+id/img_item_home"
        android:layout_width="100dp"
        android:scaleType="fitXY"
        android:src="@mipmap/logo"
        android:layout_marginRight="10dp"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/tv_item_home_name"
        android:layout_toRightOf="@id/img_item_home"
        android:text="HELLO"
        android:layout_alignTop="@id/img_item_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_item_home_price"
        android:layout_toRightOf="@id/img_item_home"
        android:text="HELLO"
        android:layout_alignBottom="@id/img_item_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_item_home_detail"
        android:layout_toRightOf="@id/img_item_home"
        android:text="HELLO"
        android:layout_below="@id/tv_item_home_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>